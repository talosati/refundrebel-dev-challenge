{
  "name": "backend",
  "version": "1.0.0",
  "description": "Node.js backend service",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "db-hafas": "^6.0.0",
    "db-stations": "^5.0.2",
    "db-vendo-client": "^6.8.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "hafas-client": "^6.3.5",
    "hafas-rest-api": "^5.1.3",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.3",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1"
  }
}
